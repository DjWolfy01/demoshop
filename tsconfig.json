{
    "compilerOptions": {
        "baseUrl": ".",
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es6",
            "es7"
        ],
        "paths": {
            "*": [
                "*"
            ],
            "ShopUi/*": [
                "./vendor/spryker-shop/shop-ui/src/SprykerShop/Yves/ShopUi/Theme/default/*"
            ]
        }
    },
    "files": [
        "./frontend/app/app.js",
        "./frontend/app/vendor.js",
        "./frontend/app/es6-polyfill.js"
    ],
    "include": [
        "./vendor/spryker-shop/**/*",
        "./src/Pyz/Yves/**/*",
        "./frontend/app/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
