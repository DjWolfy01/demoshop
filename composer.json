{
  "name": "spryker/demoshop-nonsplit",
  "description": "Spryker Demoshop (internal)",
  "license": "MIT",
  "require": {
    "spryker/spryker": "dev-bugfix/cc-1497-user-control-roles-works-incorrect",
    "spryker-eco/loggly": "dev-master",
    "spryker/rabbit-mq": "dev-master",
    "spryker/event-behavior": "dev-master",
    "spryker/synchronization-behavior": "dev-master",
    "spryker/install": "dev-master",
    "spryker/uuid-behavior": "dev-master",

    "php": ">=7.1",
    "codeitnowin/barcode": "^3.0.0",
    "guzzlehttp/guzzle": "~6.3.0",
    "league/csv": "^9.1",
    "filp/whoops": "^2.1",
    "mandrill/mandrill": "~1.0.55",
    "monolog/monolog": "^1.21.0",
    "nesbot/carbon": "~1.13.0",
    "pimple/pimple": "~1.1.1",
    "predis/predis": "^1.1.1",
    "propel/propel": "2.0.0-alpha8",
    "psr/log": "^1.0.0",
    "ruflin/elastica": "~5.3.0",
    "silex/silex": "^1.3.5",
    "symfony-cmf/routing": "^1.3.0",
    "symfony/console": "^3.0.0",
    "symfony/debug": "^2.6.13 || ^3.0.0",
    "symfony/filesystem": "^2.6.13 || ^3.0.0",
    "symfony/finder": "^2.6.13 || ^3.0.0",
    "symfony/form": "^2.7.0 || ^3.0.0",
    "symfony/http-kernel": "^2.6.13 || ^3.0.0",
    "symfony/intl": "^2.8.8 || ^3.0.0",
    "symfony/options-resolver": "^2.6.13 || ^3.0.0",
    "symfony/process": "^2.6.13 || ^3.0.0",
    "symfony/property-access": "^2.6.13 || ^3.0.0",
    "symfony/routing": "^2.6.13 || ^3.0.0",
    "symfony/security": "^2.6.13 || ^3.0.0",
    "symfony/serializer": "^2.6.13 || ^3.0.0",
    "symfony/stopwatch": "^3.0.0 || ^4.0.0",
    "symfony/translation": "^2.6.13 || ^3.0.0",
    "symfony/twig-bridge": "^2.7.0 || ^3.0.0",
    "symfony/validator": "^2.6.13 || ^3.0.0",
    "symfony/yaml": "^2.6.13 || ^3.0.0",
    "swiftmailer/swiftmailer": "^6.1",
    "twig/twig": "^1.30.0",
    "zendframework/zend-config": "^3.1.0",
    "zendframework/zend-filter": "^2.5.1",
    "zendframework/zend-servicemanager": "^3.3",
    "ext-bcmath": "*",
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-gmp": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-pdo_pgsql": "*",
    "ext-pgsql": "*",
    "ext-readline": "*",
    "ext-redis": "*",
    "league/flysystem": "^1.0",
    "egulias/email-validator": "^2.1.2",
    "league/oauth2-server": "^7.1",
    "willdurand/negotiation": "^2.3",
    "ramsey/uuid": "^3.8.0",
    "doctrine/inflector": "^1.3"
  },
  "require-dev": {
    "spryker/architecture-sniffer": "dev-master",
    "spryker/code-generator": "dev-master",
    "spryker/code-sniffer": "dev-master",
    "spryker/git-hook": "dev-master",
    "spryker/spryk": "dev-master",

    "codeception/codeception": "^2.5.0",
    "phpmd/phpmd": "^2.4",
    "sebastian/phpcpd": "^4.0.",
    "sensiolabs/security-checker": "^5.0.0",
    "symfony/web-profiler-bundle": "*",
    "symfony/var-dumper": "*",
    "site5/phantoman": "^2.0.0",
    "sllh/composer-versions-check": "^2.0.2",
    "jakoch/phantomjs-installer": "^2.1.0",
    "stecman/symfony-console-completion": "^0.8.0",
    "fzaninotto/faker": "^1.6",
    "phpstan/phpstan": "^0.10.5"
  },
  "autoload": {
    "psr-4": {
      "Generated\\": "src/Generated/",
      "Orm\\": "src/Orm/",
      "Pyz\\": "src/Pyz/"
    },
    "files": [
      "vendor/spryker/spryker/autoload.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "PyzTest\\": "tests/PyzTest/",
      "PhpStan\\": "tests/PhpStan/"
    },
    "files": [
      "test-autoload.php"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "platform": {
      "php": "7.1.11"
    },
    "use-include-path": true,
    "process-timeout": 1200
  },
  "repositories": [
    {
      "type": "git",
      "url": "git@github.com:spryker/spryker.git"
    },
    {
      "type": "git",
      "url": "git@github.com:spryker/spryk.git"
    }
  ],
  "scripts": {
    "compile": [
      "mkdir -p ./data/DE/logs/ZED",
      "echo '<?php return \"development-heroku\";' > config/Shared/console_env_local.php",
      "./deploy/heroku/run.sh"
    ],
    "post-install-cmd": [
      "PhantomInstaller\\Installer::installPhantomJS",
      "GitHook\\Composer\\Scripts\\HookInstaller::installSprykerHooks",
      "GitHook\\Composer\\Scripts\\HookInstaller::installProjectHooks"
    ],
    "post-update-cmd": [
      "PhantomInstaller\\Installer::installPhantomJS",
      "GitHook\\Composer\\Scripts\\HookInstaller::installSprykerHooks",
      "GitHook\\Composer\\Scripts\\HookInstaller::installProjectHooks"
    ],
    "phpstan": [
      "php -d memory_limit=1024M vendor/bin/phpstan analyze -c phpstan.neon src/ -l 3"
    ],
    "phpstan-setup": "vendor/bin/console dev:ide:generate-auto-completion"
  }
}
